PORT=8080
# Dossier à servir (ton site statique)
PUBLIC_DIR=../nexora_site

# Contenu (posts/roadmap) si différent du public_dir/data
CONTENT_DIR=../nexora_site/data

# Proxy optionnel vers l'API Nexora (pour éviter CORS)
NEXORA_API=http://localhost:4000
NEXORA_TENANT=default
ENABLE_PROXY=true

# Fallback hors-ligne pour /api/contact (stockage JSONL)
DATA_DIR=./var
RATE_WINDOW_MS=60000
RATE_MAX=100
CORS_ORIGIN=*
TRUST_PROXY=1
